<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/tile_usual_day"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.artmaster.android.orthodoxcalendar.data.components.TextViewWithCustomFont
            android:id="@+id/numDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="20sp"
            app:customFont="@string/font_basic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/dot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/have_holidays"
            android:src="@drawable/ic_tile_dot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/im1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:contentDescription="@string/oil_allow"
        app:layout_constraintBottom_toBottomOf="@+id/container"
        app:layout_constraintStart_toStartOf="@+id/container" />

    <ImageView
        android:id="@+id/im2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:contentDescription="@string/oil_allow"
        app:layout_constraintBottom_toBottomOf="@+id/container"
        app:layout_constraintStart_toEndOf="@+id/im1" />

    <ImageView
        android:id="@+id/im3"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:contentDescription="@string/oil_allow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/im2" />

    <ImageView
        android:id="@+id/im4"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="2dp"
        android:contentDescription="@string/oil_allow"
        app:layout_constraintBottom_toTopOf="@+id/im3"
        app:layout_constraintEnd_toEndOf="@+id/container" />

</androidx.constraintlayout.widget.ConstraintLayout>