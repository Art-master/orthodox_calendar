<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:textAlignment="center">

        <com.artmaster.android.orthodoxcalendar.data.components.TextViewWithCustomFont
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ornament_for_headers_left"
            android:textAlignment="textEnd"
            app:customFont="@string/font_ornament" />

        <com.artmaster.android.orthodoxcalendar.data.components.TextViewWithCustomFont
            android:id="@+id/page_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="3"
            android:text="@string/item_name_about"
            android:textAlignment="center"
            android:textSize="@dimen/size_text_title_item"
            app:customFont="@string/font_basic" />

        <com.artmaster.android.orthodoxcalendar.data.components.TextViewWithCustomFont
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ornament_for_headers_right"
            android:textAlignment="textStart"
            app:customFont="@string/font_ornament" />
    </LinearLayout>

    <com.artmaster.android.orthodoxcalendar.data.components.TextViewWithCustomFont
        android:id="@+id/page_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="13"
        android:clickable="true"
        android:focusable="true"
        android:textAlignment="center"
        android:textSize="@dimen/size_text_title_item"
        app:customFont="@string/font_basic" />

    <com.artmaster.android.orthodoxcalendar.data.components.TextViewWithCustomFont
        android:id="@+id/page_info_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:autoLink="email"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/app_email"
        android:textAlignment="center"
        android:textSize="@dimen/size_email_font"
        app:customFont="@string/font_basic" />

</androidx.appcompat.widget.LinearLayoutCompat>